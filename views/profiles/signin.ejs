<% layout('/layouts/boilerplate') %>
    <div class="row mb-3 justify-content-center">
        <div class="card border-success col-10 col-md-6 col-lg-4">
            <div class="card-header bg-transparent border-success text-center">
                <h3 class="m-1">SignIn</h3>
            </div>
            <div class="card-body">
                <form action="/signin" novalidate class="row need-validate" method="post">
                    <div class="mb-3">
                        <label for="Username">Username</label>
                        <input type="text" required class="form-control" autofocus id="username" name="username">
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please provide a Username.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="Password">Password (min length: 8)</label>
                        <input type="password" required class="form-control" minlength="8" id="password" name="password">
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please provide a Password.
                        </div>
                    </div>
                    <div class="text-center">
                        <button href="#" class="btn btn-outline-dark">SignIn</button>
                    </div>
                </form>
            </div>
        </div>
    </div>