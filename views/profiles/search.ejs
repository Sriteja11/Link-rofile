<% layout('/layouts/boilerplate') %>
    <div class="row justify-content-center">
        <div class="col-9 col-lg-6">
            <h2>search for : <span style="font-weight: 600;"><%= search %></span></h2>
            <% if(profiles.length == 0){%>
                <h4 class="text-center mt-5">No User Found!</h4>
            <% } %>  
            <% for(let p of profiles){ %>
                <div class="card mb-2">
                    <div class="card-body py-2 pl-3">
                        <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title" style="font-weight: 600;"><%= p.fullname %></h5>
                            <p class="card-text m-0"><%= p.role %></p>
                            <p class="card-text m-0"><%= p.country %></p>
                        </div>
                        <a href="/<%=p.author.username%>" class="btn btn-outline-dark">view</a>
                    </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>